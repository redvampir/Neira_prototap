{
    // === TERMINAL ENCODING (UTF-8 для кириллицы) ===
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "args": ["--login"],
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1",
                "LANG": "ru_RU.UTF-8"
            }
        },
        "PowerShell 7": {
            "path": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
            "args": ["-NoLogo", "-NoProfile"],
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            }
        },
        "PowerShell": {
            "source": "PowerShell",
            "args": ["-NoLogo"],
            "env": {
                "PYTHONIOENCODING": "utf-8",
                "PYTHONUTF8": "1"
            }
        }
    },
    "terminal.integrated.env.windows": {
        "PYTHONIOENCODING": "utf-8",
        "PYTHONUTF8": "1",
        "LANG": "ru_RU.UTF-8"
    },
    "terminal.integrated.fontFamily": "Consolas",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.letterSpacing": 0,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    
    "python.analysis.autoImportCompletions": false,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.exclude": [
        "**/telegram_bot.py"
    ],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportOptionalMemberAccess": "none",
        "reportAttributeAccessIssue": "none"
    },
    "chatgpt.openOnStartup": true,
    
    // === NEIRA PROJECT RULES ===
    
    // Автозапуск валидации при сохранении
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.py$",
                "cmd": "python scripts/validate_code.py ${file}"
            }
        ]
    },
    
    // Python форматирование
    "python.formatting.provider": "none",
    "[python]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.rulers": [100],
        "editor.tabSize": 4
    },
    
    // Подсветка проблемных паттернов
    "todohighlight.keywords": [
        {
            "text": "except:",
            "color": "#ffffff",
            "backgroundColor": "#ff0000",
            "overviewRulerColor": "#ff0000"
        },
        {
            "text": "except Exception:",
            "color": "#000000",
            "backgroundColor": "#ffaa00",
            "overviewRulerColor": "#ffaa00"
        },
        {
            "text": "TODO",
            "color": "#000000",
            "backgroundColor": "#ffcc00"
        }
    ],
    
    // Скрыть лишние файлы
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".pytest_cache": true,
        ".neira_cache": true
    },
    
    // Тесты
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["tests/"],
    
    // Copilot - ссылка на инструкции
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "file": ".github/copilot-instructions.md"
        }
    ]
}